{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-12 pt-5">
        <h1 class="text-center text-white">Editer {{ user.LastName | upper }} {{ user.firstName | capitalize }}</h1>

        <div class="card mt-5 p-5 shadow">
            {{ form_start(form) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.email) }}
                <button type="submit" class="btn btn-secondary mt-3">Modifier</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}