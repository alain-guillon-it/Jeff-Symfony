{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-5 pt-5 mx-auto">
        
        <h1 class="text-white mb-3">Un utilisateur</h1>
        <div class="card">
            <div class="card-header">
                <h3>{{ user.lastName | upper }} {{ user.firstName | capitalize }}</h3>
            </div>
            <div class="card-body">
                <p>
                    {{ user.email }}
                </p>
            </div>
            <div class="card-footer">
                <a href="/user">Retour sur la page d'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}